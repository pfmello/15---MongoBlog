<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head', { title: 'All Posts' }) %>
    <link rel="stylesheet" href="/styles/posts.css" />
  </head>

  <body>
    <%- include('includes/header') %>
    <main id="all-posts">
      <h1>All Posts</h1>
      <% if (posts.length === 0) { %>
      <p><%= posts %></p>
      <h2>No posts yet !</h2>

      <% } else { %>
      <!--  -->
      <% for (const post of posts) {%>
      <ol id="posts-list">
        <li><%- include('includes/post-item', {post: post})%></li>
      </ol>
      <% } %>
      <!--  -->
      <% }%>
    </main>
  </body>
</html>
